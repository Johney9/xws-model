<?xml version="1.0" encoding="UTF-8"?>
<wsdl:definitions targetNamespace="http://www.ftn.uns.ac.rs/xws/cbs/firma"
    xmlns:http="http://schemas.xmlsoap.org/wsdl/http/"
    xmlns:mime="http://schemas.xmlsoap.org/wsdl/mime/"
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:wsoap12="http://schemas.xmlsoap.org/wsdl/soap12/"
    xmlns:soapenc="http://schemas.xmlsoap.org/soap/encoding/"
    xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" 
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ws="http://www.example.com/webservice"
    
    xmlns:f="http://www.ftn.uns.ac.rs/xws/cbs/firma"
    xmlns:t="http://www.ftn.uns.ac.rs/xws/cbs/tipovi"
    xmlns:fkt="http://www.ftn.uns.ac.rs/xws/cbs/faktura">
    <!-- 3 iznad su naknadno dodati namespace-ovi -->
    <!-- importi -->
    <wsdl:types>
        <xs:schema>
            <xs:import namespace="http://www.ftn.uns.ac.rs/xws/cbs/tipovi" schemaLocation="../xsd/tipovi.xsd"/>
            <xs:import namespace="http://www.ftn.uns.ac.rs/xws/cbs/faktura" schemaLocation="../xsd/faktura.xsd"/>
        </xs:schema>
    </wsdl:types>
    
    <!-- parametri metode -->
    <wsdl:message name="prometRequest">
        <wsdl:part name="kupljeno" type="fkt:Faktura"></wsdl:part>
    </wsdl:message>
    <wsdl:message name="prometResponse">
        <wsdl:part name="response" type="fkt:Faktura"></wsdl:part>
    </wsdl:message>
    
    <!-- port -->
    <wsdl:portType name="FirmaPort">
        <wsdl:operation name="promet">
            <wsdl:input message="f:prometRequest"></wsdl:input>
            <wsdl:output message="f:prometResponse"></wsdl:output>
        </wsdl:operation>
    </wsdl:portType>

    <!-- binding -->
    <wsdl:binding name="FirmaBinding" type="f:FirmaPort">
        <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
        <wsdl:operation name="promet">
            <soap:operation soapAction=""/>
            <wsdl:input>
                <soap:body use="literal" namespace="http://www.ftn.uns.ac.rs/xws/cbs/firma"/>
            </wsdl:input>
            <wsdl:output>
                <soap:body use="literal" namespace="http://www.ftn.uns.ac.rs/xws/cbs/firma"/>
            </wsdl:output>
        </wsdl:operation>
    </wsdl:binding>
    
    <!-- service -->
    <wsdl:service name="FirmaService">
        <wsdl:port name="FirmaPort" binding="f:FirmaBinding">
            <soap:address location="http://localhost:8080/firma"/>
        </wsdl:port>
    </wsdl:service>
    
</wsdl:definitions>